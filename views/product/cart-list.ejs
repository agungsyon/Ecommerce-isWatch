<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Cart</title>
    
</head>
<body>
    <style>
        .parent {
          position: relative; /* Set parent position to relative */
        }

        .bottom {
            position: absolute;
            bottom: 0;
        }
    </style>
    <div class="parent">
    <h2 style="text-align: center;">Cart</h2>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Order Number</th>
            <th scope="col">Name</th>
            <th scope="col">Amount</th>
            <th scope="col">Order Date</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% let totalAmount = 0 %>
            <% let quantity = 0 %>
          <% carts.forEach((el, i) => { %>
           <tr>
                <td><%= ++i %></td>
                <td><%= el.orderNumber %></td>
                <td><%= el.Product.name %></td>
                <td><%= el.amount %></td>
                <td><%= dateFormat(el.orderDate) %></td>
                <td>
                    <a href="/cart/cancel/<%= el.id %>" class="btn btn-success" style="font-size: 10px; background-color: rgb(179, 31, 31); border: none;">Cancel</a>
                </td>
           </tr>
           <% totalAmount+= el.amount %>
           <% quantity+= el.quantity %>
          <% }) %>
        </tbody>
      </table><br><br><br><br><br><br><br>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Total Amount</th>
            <th scope="col">Quantity</th>
            <th scope="col">CheckOut</th>
            <th scope="col">Qris</th>
          </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td><%= totalAmount %></td>
                <td><%= quantity %></td>
                <td>
                    <button style="border-radius: 5px;" ><a href="/cart/checkout/" style="text-decoration: none; color: black;">CheckOut</a></button>
                </td>
                <td>
                    <button style="border-radius: 5px;" ><a href="/cart/checkout/qrcode/<%= totalAmount %>" style="text-decoration: none; color: black;">CheckOut With QR Code</a></button>
                </td>
            </tr>
        </tbody>
      </table>
      <div class="bottom"></div>
    </div>
</body>
</html>